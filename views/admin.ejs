    <div class="users-container mx-5">
        <center>
        <table class="table">
            
            <tr>
                <th>
                    <div class="container">
                        <h2>Users</h2>
                        <table class="table table-bordered border border-5"> 
                            <tr class="border border-5">
                                <th class="border border-5 bg bg-info-subtle">User</th>
                                <th class="border border-5 bg bg-info-subtle">Cashier</th>
                                <th class="border border-5 bg bg-info-subtle">Manager</th>
                                <th class="border border-5 bg bg-info-subtle">Admin</th>
                            </tr>
                            <% for (var i in users) {%>
                                <tr class="border border-5">
                                    <th class="border border-5"><%=users[i].user_name%></th>
                                    <th class="border border-5"><%=users[i].cashier_perm%></th>
                                    <th class="border border-5"><%=users[i].manager_perm%></th>
                                    <th class="border border-5"><%=users[i].admin_perm%></th>

                                </tr>
                            <% } %>
                    </table>
                    </div>
                </th>
    
                <th>
                    <div class="admin-management" style="float: right" >

                    <div class="modify-user-add-screen border border-5 d-block p-5 bg-info-subtle">
                        <center>
                            <h2>Add User</h2><br>
                        <form method="post" action="/admin/user_add">
                            <label for="UserName">Enter the User's Name (First & Last):</label><br>
                            <input type="text" id="UserName" name="UserName"><br>
                                
                            <br> 

                            <p>Choose User's Cashier Permission:</p>
                            <input type="radio" id="CashierPerm" name="CashierPerm" value="Yes">
                            <label for="CashierPerm">Yes</label><br>
                    
                            <input type="radio" id="CashierPerm" name="CashierPerm" value="No">
                            <label for="CashierPerm">No</label><br><br>
                            
                            <p>Choose User's Manager Permission:</p>
                            <input type="radio" id="ManagerPerm" name="ManagerPerm" value="Yes">
                            <label for="ManagerPerm">Yes</label><br>
                    
                            <input type="radio" id="ManagerPerm" name="ManagerPerm" value="No">
                            <label for="ManagerPerm">No</label><br><br>
                            
                            <p>Choose User's Administrative Permission:</p>
                            <input type="radio" id="AdminPerm" name="AdminPerm" value="Yes">
                            <label for="AdminPerm">Yes</label><br>
                    
                            <input type="radio" id="AdminPerm" name="AdminPerm" value="No">
                            <label for="AdminPerm">No</label><br><br>
                    
                            <input type="submit" value="Submit">
                        </form>
                    </center>
                    </div>
    
                    <br></br>
                </th>
            </tr>
        
        </table>
