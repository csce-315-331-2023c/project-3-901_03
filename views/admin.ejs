<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin View</title>
    <link rel="stylesheet" href="../manager.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link href='https://fonts.googleapis.com/css?family=Sofia' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Bodoni Moda' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Beth Ellen' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Bacasime Antique' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Calligraffitti' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Fuzzy Bubbles' rel='stylesheet'>
        
</head>

<body>
    <div id="google_translate_element"></div>

        <script type="text/javascript">
        function googleTranslateElementInit() {
        new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
        }
        </script>

        <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    
    <a href="logout" class="btn btn-lg border border-1 border border-dark">Logout</a>   
    <a href="/" class="btn btn-lg border border-1 border border-dark">Home</a>
    
    <br></br>

    <div class="users-container mx-5">
        <center>
        <table class="table">
            
            <tr>
                <th>
                    <div class="container">
                        <h2>Users</h2>
                        <table class="table table-bordered border border-5"> 
                            <tr class="border border-5">
                                <th class="border border-5 bg bg-info-subtle">User</th>
                                <th class="border border-5 bg bg-info-subtle">Cashier</th>
                                <th class="border border-5 bg bg-info-subtle">Manager</th>
                                <th class="border border-5 bg bg-info-subtle">Admin</th>
                            </tr>
                            <% for (var i in users) {%>
                                <tr class="border border-5">
                                    <th class="border border-5"><%=users[i].user_name%></th>
                                    <th class="border border-5"><%=users[i].cashier_perm%></th>
                                    <th class="border border-5"><%=users[i].manager_perm%></th>
                                    <th class="border border-5"><%=users[i].admin_perm%></th>

                                </tr>
                            <% } %>
                    </table>
                    </div>
                </th>
    
                <th>
                    <div class="admin-management" style="float: right;"> <!--style="float: right"-->

                    <div class="modify-user-add-screen border border-5 d-block p-5 bg-info-subtle">
                        <center>
                            <h2>Add User</h2><br>
                        <form method="post" action="/admin/user_add">
                            <label for="UserName">Enter the User's Name (First & Last):</label><br>
                            <input type="text" id="UserName" name="UserName"><br>
                                
                            <br> 
                            
                            Select User Permission:
                            <select class="select" name="Perm" id="Perm">
                                <option value="" selected disabled>Select</option>
                                    <option value="admin" >Administrator</option>
                                    <option value="manager" >Manager</option>
                                    <option value="cashier" >Cashier</option>
                            </select><br><br>
                    
                            <input type="submit" value="Add User">
                        </form>
                    </center>
                    </div>
    
                    <br></br>

                    <div class="modify-user-mod-screen border border-5 d-block p-5 bg-info-subtle">
                    <center>
                        <h2>Modify Permissions for Existing User</h2><br>
                        <form method="post" action="/admin/user_modify">
                            Please select User Name:
                            <select class="select" name="UserName" id="UserName">
                                <option value="" selected disabled>Select</option>
                                <% for (var i in users) {%>
                                    <option value="<%=users[i].user_name%>" ><%=users[i].user_name%></option>
                                <% } %>
                            </select><br><br>

                            Select User Permission:
                            <select class="select" name="Perm" id="Perm">
                                <option value="" selected disabled>Select</option>
                                    <option value="admin" >Administrator</option>
                                    <option value="manager" >Manager</option>
                                    <option value="cashier" >Cashier</option>
                            </select><br><br>
                
                        <input type="submit" value="Modify User">
                        </form>
                        </center>
                    </div>
                    
                    <br><br>

                    <div class="modify-user-delete-screen border border-5 d-block p-5 bg-info-subtle">
                        <center>
                            <h2>Delete User</h2><br>
                            <form method="post" action="/admin/user_delete">
                                Please select User Name to Delete:
                                <select class="select" name="UserName" id="UserName">
                                    <option value="" selected disabled>Select</option>
                                    <% for (var i in users) {%>
                                        <option value="<%=users[i].user_name%>" ><%=users[i].user_name%></option>
                                    <% } %>
                                </select><br><br>
    
                            <input type="submit" value="Delete User">
                            </form>
                            </center>
                        </div>

                </th>
            </tr>
        
        </table>
    </center>
    </div>
    <script src="manager.js"></script>
</body>

</html>