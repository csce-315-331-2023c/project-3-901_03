<!doctype html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Manager View</title>
        <link rel="stylesheet" href="../landing.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
            <link href='https://fonts.googleapis.com/css?family=Sofia' rel='stylesheet'>
            <link href='https://fonts.googleapis.com/css?family=Bodoni Moda' rel='stylesheet'>
            <link href='https://fonts.googleapis.com/css?family=Beth Ellen' rel='stylesheet'>
            <link href='https://fonts.googleapis.com/css?family=Bacasime Antique' rel='stylesheet'>
            <link href='https://fonts.googleapis.com/css?family=Calligraffitti' rel='stylesheet'>
            <link href='https://fonts.googleapis.com/css?family=Fuzzy Bubbles' rel='stylesheet'>
            >
    </head>

    <body>
        <div class="modify-menu-add-screen">
            <h1 class="btn btn-info btn-lg">Add Menu Item</h1>
            <form method="post" action="/manager_screen/menu_add">
              <label for="ItemName">Enter the item name:</label><br>
              <input type="text" id="ItemName" name="ItemName"><br>
        
              <label for="ItemPrice">Enter the item price:</label><br>
              <input type="text" id="ItemPrice" name="ItemPrice">
        
              <p>Choose Menu Type:</p>
                <input type="radio" id="sweet" name="MenuType" value="Sweet Crepes">
                <label for="sweet">Sweet Crepe</label><br>
        
                <input type="radio" id="savory" name="MenuType" value="Savory Crepes">
                <label for="savory">Savory Crepe</label><br>
        
                <input type="radio" id="breakfast" name="MenuType" value="Breakfast">
                <label for="breakfast">Breakfast</label><br>
        
                <input type="radio" id="drink" name="MenuType" value="Drink">
                <label for="drink">Fountain Drink</label><br>
        
                <input type="radio" id="seasonal" name="MenuType" value="Seasonal Item">
                <label for="seasonal">Seasonal Item</label><br><br>
        
              <p>Choose Menu Time:</p>
                <input type="radio" id="allDay" name="MenuTime" value="All Day">
                <label for="allDay">All Day</label><br>
        
                <input type="radio" id="breakfast" name="MenuTime" value="Breakfast">
                <label for="breakfast">Breakfast</label><br><br>
        
              <p>Select Ingredients:</p>
                <!-- <input type="checkbox" id="lol" name="ingredientList" value="lol">
                <label for="lol">salsa</label> -->
                <div class="row">
                  <% for (var i in ingredients) {%>
                    <div class="col-2">
                      <input type="checkbox" id="<%=ingredients[i].ingred_name%>" name=ingredList value="<%=ingredients[i].ingred_name%>">
                      <label for="<%=ingredients[i].ingred_name%>"> <%=ingredients[i].ingred_name%> <br> </label>
                    </div>
                  <% } %> 
                </div>
                <br><br>
        

              <input type="submit" value="Submit">
            </form>
        </div>
        <script src="manager.js"></script>
    </body>

</html>