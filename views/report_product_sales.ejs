<!doctype html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Manager View</title>
        <link rel="stylesheet" href="../landing.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link href='https://fonts.googleapis.com/css?family=Sofia' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Bodoni Moda' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Beth Ellen' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Bacasime Antique' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Calligraffitti' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Fuzzy Bubbles' rel='stylesheet'>
    </head>

    <body style="background-color: rgb(197, 197, 197);">
        <div class="report-menu-sales-screen">
            <a href="main_reports.ejs" class="btn btn-info">Back</a>
            <table style="background-color: rgb(197, 197, 197);" class="table">
            <tr>
                <th>
                <div style="background-color: rgb(197, 197, 197);" class="container">
                    <center><h1>Product Report</h1>
                    <h6>Displays the total amount of times an ingredient is used within the given timeframe</h6></center>
                    <div style="background-color: grey;"class="modify-ingredient-add-screen border border-5 d-block p-5 bg-info-subtle">
                        <%if (result && result.length > 0) { %>
                            <% let minimum_item = "" %>
                            <% let maximum_item = "" %>
                            <%let maxItemTotal = Number.MIN_VALUE; %>
                            <% let minItemTotal = Number.MAX_VALUE; %>
                        
        
                            <% result.forEach(row => { %>
                                <% maxItemTotal = Math.max(maxItemTotal, row.total_usage); %>
                                <% if (maxItemTotal == row.total_usage) { %>
                                    <% maximum_item = row.ingred_name %>
                                <% } %>
                            <% }); %>
        
                            <% result.forEach(row => { %>
                                <% minItemTotal = Math.min(minItemTotal, row.total_usage); %>
                                <% if (minItemTotal == row.total_usage) { %>
                                    <% minimum_item = row.ingred_name %>
                                <% } %>
                            <% }); %>
                        
                            
                            <center>   
                                <h6>Maximum Item "<%=maximum_item %>"</h6> 
                                    <p>Total: $<%= maxItemTotal %></p>
                                    <p></p>
                                <h6>Minimum Item "<%=minimum_item %>"</h6> 
                                    <p>Total: $<%= minItemTotal %></p>
                            </center> 
                            
        
                        <% } else {%>
                                <p>No results found.</p>
                        <% } %>
                        </div>
                    <table class="table table-bordered border border-5"> 
                        <tr class="border border-5">
                            <th class="border border-5 bg bg-info-subtle">Ingredient</th>
                            <th class="border border-5 bg bg-info-subtle">Total Times Used</th>
                        </tr>
                        <% if (result && result.length > 0) { %>
                            <% result.forEach(row => { %>
                                <tr class="border border-5">
                                    <th class="border border-5"><%= row.ingred_name%></th>
                                    <th class="border border-5"><%=row.total_usage%></th>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <p>No results found.</p>
                        <% } %>
                    </table>
                    </div>
                    </th>
                    <th>
                        

                    
                </div>
            </th>
            </tr>
            </table>
        </div>
    </body>
   
    <script src="report_product_sales.js"></script>

</html>