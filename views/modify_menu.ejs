    <div class="menu-container mx-5">
        <center>
        <table class="table">
            
            <tr>
                <th>
                    <div class="container">
                        <h2>Menu</h2>
                        <table class="table table-bordered border border-5"> 
                            <tr class="border border-5">
                                <th class="border border-5 bg bg-info-subtle">Item</th>
                                <th class="border border-5 bg bg-info-subtle">Price</th>
                            </tr>
                            <% for (var i in menuItems) {%>
                                <tr class="border border-5">
                                    <th class="border border-5"><%=menuItems[i].food_name%></th>
                                    <th class="border border-5"><%=menuItems[i].price_food%></th>
                                </tr>
                            <% } %> 
                        </table>
                    </div>
                </th>
    
                <th>
                    <div class="menu-management" style="float: right" >

                        <div class="modify-menu-add-screen border border-5 d-block p-5 bg-info-subtle">
                            <center>
                            <h2>Add Menu Item</h2>
                            <form method="post" action="/manager_screen/menu_add">
                              <label for="ItemName">Enter the item name:</label><br>
                              <input type="text" id="ItemName" name="ItemName"><br>
                        
                              <label for="ItemPrice">Enter the item price:</label><br>
                              <input type="text" id="ItemPrice" name="ItemPrice">
                        
                              <p>Choose Menu Type:</p>
                                <input type="radio" id="sweet" name="MenuType" value="Sweet Crepes">
                                <label for="sweet">Sweet Crepe</label><br>
                        
                                <input type="radio" id="savory" name="MenuType" value="Savory Crepes">
                                <label for="savory">Savory Crepe</label><br>
                        
                                <input type="radio" id="breakfast" name="MenuType" value="Breakfast">
                                <label for="breakfast">Breakfast</label><br>
                        
                                <input type="radio" id="drink" name="MenuType" value="Drink">
                                <label for="drink">Fountain Drink</label><br>
                        
                                <input type="radio" id="seasonal" name="MenuType" value="Seasonal Item">
                                <label for="seasonal">Seasonal Item</label><br><br>
                        
                              <p>Choose Menu Time:</p>
                                <input type="radio" id="allDay" name="MenuTime" value="All Day">
                                <label for="allDay">All Day</label><br>
                        
                                <input type="radio" id="breakfast" name="MenuTime" value="Breakfast">
                                <label for="breakfast">Breakfast</label><br><br>
                        
                              <p>Select Ingredients:</p>
                                <!-- <input type="checkbox" id="lol" name="ingredientList" value="lol">
                                <label for="lol">salsa</label> -->
                                <div class="row gx-2">
                                    <% for (var i in ingredients) {%>
                                      <div class="col-4">
                                        <input type="checkbox" id="<%=ingredients[i].ingred_name%>" name=ingredList value="<%=ingredients[i].ingred_name%>">
                                        <label for="<%=ingredients[i].ingred_name%>"> <%=ingredients[i].ingred_name%> <br> </label>
                                      </div>
                                    <% } %> 
                                  </div>
                                  <br><br>
                                <!-- <% for (var i in ingredients) {%>
                                <input type="checkbox" id="<%=ingredients[i].ingred_name%>" name=ingredList value="<%=ingredients[i].ingred_name%>">
                                <label for="<%=ingredients[i].ingred_name%>"> <%=ingredients[i].ingred_name%> <br> </label>
                                <% } %> 
                                <br><br> -->
                        
                
                              <input type="submit" value="Submit">
                            </form>
                        </center>
                        </div>
    
                    <br></br>
                
                    <div class="modify-menu-delete-screen border border-5 d-block p-5 bg-info-subtle">
                        <center>
                        <h2>Delete Menu Item</h2>
            
                        <form method="post" action="/manager_screen/menu_delete">
                            <select class="select" name="ItemName" id="ItemName">
                                <option value="" selected disabled>Please select item name</option>
                                <% for (var i in menuItems) {%>
                                    <option value="<%=menuItems[i].food_name%>" ><%=menuItems[i].food_name%></option>
                                <% } %>
                            </select>
                            <br><br>
            
                        <input type="submit" value="Submit">
                        </form>
                    </center>
                    </div>
    
                    <br></br>
                
                    <div class="modify-menu-name-screen border border-5 d-block p-5 bg-info-subtle">
                        <center>
                        <h2>Change Name of Menu Item</h2>
                        <form method="post" action="/manager_screen/menu_mod_name">
                            <select class="select" name="MenuItemName" id="MenuItemName">
                                <option value="" selected disabled>Please select item name</option>
                                <% for (var i in menuItems) {%>
                                    <option value="<%=menuItems[i].food_name%>" ><%=menuItems[i].food_name%></option>
                                <% } %>
                            </select>
                            <br><br>
            
                        <label for="NewMenuItemName">Enter the new menu item name:</label><br>
                        <input type="text" id="NewMenuItemName" name="NewMenuItemName"><br><br>
            
                        <input type="submit" value="Submit">
                        </form>
                    </center>
                    </div>

                    <br></br>

                    <div class="modify-menu-price-screen border border-5 d-block p-5 bg-info-subtle">
                        <center>
                        <h2>Change Price of Menu Item</h2>
                        <form method="post" action="/manager_screen/menu_mod_price">
                            <select class="select" name="MenuItemName" id="MenuItemName">
                                <option value="" selected disabled>Please select item name</option>
                                <% for (var i in menuItems) {%>
                                    <option value="<%=menuItems[i].food_name%>" ><%=menuItems[i].food_name%></option>
                                <% } %>
                            </select>
                            <br><br>
            
                        <label for="MenuItemPrice">Enter the new menu item price:</label><br>
                        <input type="text" id="MenuItemPrice" name="MenuItemPrice"><br><br>
            
                        <input type="submit" value="Submit">
                        </form>
                    </center>
                    </div>

                </div>
    
                </th>
            </tr>
        
        </table>
    </center>
    </div>

    <script src="manager.js"></script>
</body>

</html>