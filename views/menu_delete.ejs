    <body>
        <div class="modify-menu-delete-screen">
            <h1>Delete Menu Item</h1>

            <form method="post" action="/manager_screen/menu_delete">
                <select class="select" name="ItemName" id="ItemName">
                    <option value="" selected disabled>Please select item name</option>
                    <% for (var i in menuItems) {%>
                        <option value="<%=menuItems[i].food_name%>" ><%=menuItems[i].food_name%></option>
                    <% } %>
                </select>
                <br><br>

            <input type="submit" value="Submit">
            </form>
        </div>
        <script src="manager.js"></script>
    </body>

</html>